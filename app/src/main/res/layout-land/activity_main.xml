<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.MainActivity">
    <ImageView
            android:layout_width="276dp"
            android:layout_height="136dp"
            app:srcCompat="@drawable/bmi"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightLabel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.058"
            android:text="@string/height_label" app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/heightEditText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/heightLabel" app:layout_constraintHorizontal_bias="0.098"
            android:hint="@string/height_input_hint_eu" android:inputType="number"/>
    <TextView
            android:text="@string/weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightLabel" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/heightEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.053"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/weightEditText" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/weightLabel" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.093"
            android:hint="@string/weight_input_hint_eu"/>
    <Button
            android:text="@string/count_bmi_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countBmiButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.601"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <TextView
            android:layout_width="117dp"
            android:layout_height="53dp"
            android:id="@+id/bmiValueLabel" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/yourBmiLabel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.618" android:textSize="36sp"/>
    <TextView
            android:text="@string/your_bmi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yourBmiLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/countBmiButton"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/euUsMeasuresSwitch" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp" android:rotation="90"/>
    <TextView
            android:text="@string/eu_measure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/euMeasureLabel" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/euUsMeasuresSwitch" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"/>
    <TextView
            android:text="@string/us_measure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usMeasureLabel" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/euUsMeasuresSwitch" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"/>
</android.support.constraint.ConstraintLayout>